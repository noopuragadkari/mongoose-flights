<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Flights Data</title>
</head>
<body>
    <h1>Flights Details</h1>
    <section class="marginTop">
        <div class="row">
            <dt class="col-sm-3">Airline:</dt>
            <dd class="col-sm-9"><%= flight.airline %></dd>
        </div>
        <div class="row">
            <dt class="col-sm-3">Airport:</dt>
            <dd class="col-sm-9"><%= flight.airport %></dd>
        </div>
        <div class="row">
            <dt class="col-sm-3">Flight Number:</dt>
            <dd class="col-sm-9"><%= flight.flightNo %></dd>
        </div>
        <div class="row">
            <dt class="col-sm-3">Departure Date:</dt>
            <dd class="col-sm-9"><%= flight.departs %></dd>
        </div>
    </section>
    <section class="marginTop">
        <h5>DESTINATION::</h5>
        <form method="POST"
  action="/flights/<%= flight._id %>/destination">
            <div class="col-6 form-group">
                <label class="form-label">Add Destination:</label>
                <input type="text" class="form-control" name="airport"  placeholder="Enter Destination">
            </div>
            <div class="col-6 form-group marginTop">
                <label class="form-label">Arrival Date:</label>
                <input type="text" class="form-control" name="arrival"  placeholder="Enter Arrival Date/Time">
            </div>
            <div class="col-6 marginTop">
                <button type="submit" class="btn btn-primary">ADD DESTINATION</button>
            </div>
        </form>
    </section>
    <section class="marginTop">
        <table class="table table-striped">
            <thead class="thead-dark">
                <th scope="col">Aiport</th>
                <th scope="col">Arrival Date</th>
            </thead>
            <tbody>
                <% flight.destinations.forEach(function(r) { %>
                    <tr>
                        <td><%= r.airport %></td>
                        <td><%= r.arrival %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </section>
</body>